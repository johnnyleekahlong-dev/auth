{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*", "src/types/**/*", "./api/*.ts"],
  "exclude": ["node_modules"]
}
